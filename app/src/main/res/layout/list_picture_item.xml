<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pic_list_item_height"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            style="@style/Base.TextAppearance.AppCompat.Body1"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/list_item_widget_margin"
            android:layout_toRightOf="@id/author"
            android:layout_alignBaseline="@id/author"
            style="@style/Base.TextAppearance.AppCompat.Small"/>

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/author"
            android:layout_alignParentLeft="true"
            style="@style/Base.TextAppearance.AppCompat.Small"/>

        <TextView
            android:id="@+id/oo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/list_item_widget_margin"
            style="@style/Base.TextAppearance.AppCompat.Small"/>

        <TextView
            android:id="@+id/xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/list_item_widget_margin"
            android:layout_toLeftOf="@id/oo"
            style="@style/Base.TextAppearance.AppCompat.Small"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/oo"
            android:layout_below="@id/comment_content"
            android:background="@color/image_view_default_background"
            app:actualImageScaleType="centerInside"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>